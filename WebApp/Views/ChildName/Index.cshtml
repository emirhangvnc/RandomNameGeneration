
@model EntityLayer.ChildName // Model'i düzenleyin

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Rasgele Çocuk İsim Önerme</h2>
            <button id="btnOner" class="btn btn-primary">İsim Öner</button>
            <div id="onerilenIsimResult" class="mt-3"></div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#btnOner").click(function () {
                $.ajax({
                    url: '/ChildName/RandomChildName',
                    type: "POST",
                    dataType: 'json',
                    contentType: 'application/json',
                    success: function (data) {
                        $("#onerilenIsimResult").html(data.randomChildName.name);
                    },
                    error: function () {
                        console.log("İsim önerilirken bir hata oluştu.");
                    }
                });
            });
        });
    </script>
}